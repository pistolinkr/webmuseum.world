rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the file
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User profile pictures and cover images
    match /users/{userId}/{allPaths=**} {
      // Users can read any user's profile images (public)
      allow read: if true;
      
      // Users can only upload/update/delete their own profile images
      allow write: if isOwner(userId);
    }
    
    // Exhibition images
    match /exhibitions/{exhibitionId}/{allPaths=**} {
      // Anyone can read exhibition images (public exhibitions)
      allow read: if true;
      
      // Only authenticated users can upload exhibition images
      // Note: In production, you might want to verify the user owns the exhibition
      allow write: if isAuthenticated();
    }
  }
}

