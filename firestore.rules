rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns a document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if exhibition is public or user owns it
    function canReadExhibition(exhibitionId) {
      let exhibition = get(/databases/$(database)/documents/exhibitions/$(exhibitionId));
      return exhibition.data.isPublic == true || isOwner(exhibition.data.userId);
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles (public information)
      allow read: if true;
      
      // Users can only create/update their own profile
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      // Users cannot delete their own profile (for data integrity)
      allow delete: if false;
    }
    
    // Exhibitions collection
    match /exhibitions/{exhibitionId} {
      // Anyone can read public exhibitions, or owners can read their own exhibitions
      allow read: if resource == null || 
                     resource.data.isPublic == true || 
                     isOwner(resource.data.userId);
      
      // Only authenticated users can create exhibitions
      // Must set userId to their own ID
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.id == exhibitionId;
      
      // Only the owner can update their exhibition
      // Cannot change userId
      allow update: if isOwner(resource.data.userId) && 
                       request.resource.data.userId == resource.data.userId &&
                       request.resource.data.id == exhibitionId;
      
      // Only the owner can delete their exhibition
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Artworks collection
    match /artworks/{artworkId} {
      // Anyone can read artworks if they belong to a public exhibition
      // Or if the user owns the artwork
      allow read: if resource == null ||
                     resource.data.exhibitionId == null ||
                     canReadExhibition(resource.data.exhibitionId) ||
                     isOwner(resource.data.userId);
      
      // Only authenticated users can create artworks
      // Must set userId to their own ID and exhibitionId must exist
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.exhibitionId != null &&
                       request.resource.data.id == artworkId;
      
      // Only the owner can update their artwork
      // Cannot change userId or exhibitionId
      allow update: if isOwner(resource.data.userId) && 
                       request.resource.data.userId == resource.data.userId &&
                       request.resource.data.exhibitionId == resource.data.exhibitionId &&
                       request.resource.data.id == artworkId;
      
      // Only the owner can delete their artwork
      allow delete: if isOwner(resource.data.userId);
    }
  }
}

